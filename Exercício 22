<body>
    <p id="paragrafo">Clique duas vezes neste parágrafo para escondê-lo.</p>

    <script>
        const paragrafo = document.getElementById('paragrafo');
        paragrafo.addEventListener('dblclick', function() {
            this.style.display = 'none';
        });
    </script>
