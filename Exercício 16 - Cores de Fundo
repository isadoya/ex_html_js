    <h1>Escolha uma cor de fundo:</h1>
    <input type="radio" name="cor" value="vermelho" onchange="mudarCor('red')"> Vermelho<br>
    <input type="radio" name="cor" value="azul" onchange="mudarCor('blue')"> Azul<br>
    <input type="radio" name="cor" value="amarelo" onchange="mudarCor('yellow')"> Amarelo<br>
    <input type="radio" name="cor" value="branco" onchange="mudarCor('white')"> Branco<br>

    <script>
        function mudarCor(cor) {
            document.body.style.backgroundColor = cor;
        }
    </script>
